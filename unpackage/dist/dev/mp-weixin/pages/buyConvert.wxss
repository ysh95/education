          align-items: center;
  color: #343434;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
}
.head .headItem .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
