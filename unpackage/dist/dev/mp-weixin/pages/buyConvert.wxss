.head {
  width: 690rpx;
  padding: 30rpx 30rpx 0;
}
.head .headItem {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
