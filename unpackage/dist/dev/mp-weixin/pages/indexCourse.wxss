}
.contact {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: fixed;
  z-index: 99;
  right: -12rpx;
  bottom: 22vh;
}
.contact image {
  width: 100%;
  height: 100%;
}
.contact button {
  background: transparent !important;
  width: 120rpx;
  height: 120rpx;
  border: none !important;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0;
}
button::after {
  border: none;
}

