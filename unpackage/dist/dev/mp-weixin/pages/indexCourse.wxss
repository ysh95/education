  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
.comment .item > image {
  width: 66rpx;
  height: 66rpx;
  border-radius: 66rpx;
  margin-right: 26rpx;
}
.comment .item .right {
  width: 600rpx;
}
.comment .item .right text {
  display: block;
