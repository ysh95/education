  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.comment .item .right .content {
  color: #898989;
  font-size: 26rpx;
  margin: 16rpx 0;
}
.comment .item .right .time {
  color: #999999;
  font-size: 22rpx;
}
.buy {
  width: 550rpx;
  padding: 26rpx 100rpx 26rpx;
  background-color: #fff;
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  position: fixed;
