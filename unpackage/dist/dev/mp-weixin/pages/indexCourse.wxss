  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 30rpx;
}
.contList .item > text {
  color: #999999;
  font-size: 24rpx;
}
.contList .item > view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.contList .item > view text {
  color: #666666;
  font-size: 20rpx;
  border: 1rpx solid #dddddd;
  border-radius: 6rpx;
  padding: 1rpx 6rpx;
}
.contList .item > view view {
  color: #343434;
  font-size: 28rpx;
  width: 510rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 10rpx;
