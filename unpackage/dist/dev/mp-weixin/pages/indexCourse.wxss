.indexCourse {
  width: 750rpx;
}
.indexCourse .video {
  width: 100%;
  height: 350rpx;
}
.indexCourse .video video,
.indexCourse .video image {
  width: 100%;
  height: 100%;
}
.detail {
  width: 690rpx;
  padding: 30rpx;
}
.detail text {
  display: block;
  color: #999999;
  font-size: 22rpx;
  margin-bottom: 16rpx;
}
.detail .detailTitle {
  color: #343434;
  font-size: 30rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.course {
  width: 750rpx;
  padding-bottom: 100rpx;
}
.course .head {
  width: 750rpx;
  padding: 30rpx 0 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.course .head > view {
  color: #343434;
  font-size: 30rpx;
  height: 60rpx;
  font-weight: 600;
}
.course .head .cur {
  color: #fe9359;
}
.course .imgList {
  width: 100%;
  height: auto;
}
.course .imgList image {
  width: 100%;
  height: auto;
}
.cur::after {
  content: '';
  width: 60rpx;
  height: 6rpx;
  background-color: #fe9359;
  display: block;
  margin: 10rpx auto 0;
  border-radius: 6rpx;
}
.contList {
  width: 690rpx;
  padding: 30rpx;
}
